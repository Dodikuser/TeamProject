<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">

    <!-- Поиск по истории -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Пошук в історії"
        android:iconifiedByDefault="false"
        android:layout_marginBottom="8dp" />

    <!-- Кнопки переключения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_visit_history"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Історія відвідування"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#626FC2"
            android:textColor="@android:color/white"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btn_search_history"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Історія пошуку"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#626FC2"
            android:textColor="@android:color/white"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- RecyclerView для истории -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Сообщение когда история пуста -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_search"
            android:layout_marginBottom="16dp"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Історія порожня"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тут з'являться ваші дані"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>