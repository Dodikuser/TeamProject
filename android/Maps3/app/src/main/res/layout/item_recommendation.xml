<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Такий самий дизайн як у item_favorites, але без кнопки видалити -->
        <ImageView
            android:id="@+id/recommendation_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recommendation_image"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Назва місця -->
            <TextView
                android:id="@+id/recommendation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назва місця"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Адреса -->
            <TextView
                android:id="@+id/recommendation_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Адреса"
                android:textSize="14sp" />

            <!-- Рейтинг -->
            <RatingBar
                android:id="@+id/recommendation_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.1" />

            <!-- Кнопка "Перейти" -->
            <Button
                android:id="@+id/recommendation_btn_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/primary_light"
                android:text="Перейти"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>