<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Верхняя часть с профилем -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Аватарка профиля (120dp), круглая -->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_account"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/CustomCircleImageView"

                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Кнопка для изменения/добавления аватарки -->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/changeAvatarFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:tint="@android:color/white"
                app:fabSize="mini"
                android:contentDescription="Змінити аватар"
                app:layout_constraintBottom_toBottomOf="@id/profileIcon"
                app:layout_constraintEnd_toEndOf="@id/profileIcon"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:elevation="4dp"/>

            <!-- Кнопка для удаления аватарки -->
            <!-- This button should be visible only if a custom avatar is set. -->
            <!-- Clicking it should revert to the default avatar and hide this button. -->
            <ImageButton
                android:id="@+id/removeAvatarButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/account_circle_24dp_e3e3e3"
                app:tint="@color/design_default_color_error"
                android:padding="6dp"
                android:contentDescription="Видалити аватар"
                android:visibility="gone"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="@id/profileIcon"
                app:layout_constraintEnd_toEndOf="@id/profileIcon"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                />

            <!-- Имя -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ім'я Прізвище"
                android:textSize="22sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileIcon" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameText" />

            <!-- Дата регистрации -->
            <TextView
                android:id="@+id/registrationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата реєстрації:"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailText" />

            <TextView
                android:id="@+id/registrationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.04.2025"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registrationLabel" />

            <!-- Кнопки действий -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Змінити"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#626FC2"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registrationDate"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Вийти"
                android:textSize="16sp"
                android:textColor="#000000"
                app:backgroundTint="#E3E3E3"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editButton"
                style="@style/Widget.MaterialComponents.Button" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Раздел "Мої відгуки" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#F8F8F8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мої відгуки"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Отзыв 1 -->
            <!-- Відгук 1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/review_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Кнопка "Перейти" вверху справа -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goToPlaceButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Перейти"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#626FC2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#626FC2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/goToPlaceButton1"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/reviewPlaceName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Назва місця"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/reviewDateTime1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дата та час"
                        android:textSize="12sp"
                        android:textColor="#808080"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:id="@+id/reviewText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Текст відгуку"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/reviewAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Адреса"
                        android:textSize="13sp"
                        android:textColor="#808080"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/reviewRating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рейтинг: 5.0"
                        android:textSize="13sp"
                        android:textColor="#626FC2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Відгук 2 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/review_background"
                android:padding="16dp">

                <!-- Кнопка "Перейти" вверху справа -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goToPlaceButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Перейти"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#626FC2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#626FC2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/goToPlaceButton2"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/reviewPlaceName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Назва місця"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/reviewDateTime2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дата та час"
                        android:textSize="12sp"
                        android:textColor="#808080"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:id="@+id/reviewText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Текст відгуку"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/reviewAddress2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Адреса"
                        android:textSize="13sp"
                        android:textColor="#808080"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/reviewRating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рейтинг: 5.0"
                        android:textSize="13sp"
                        android:textColor="#626FC2"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>