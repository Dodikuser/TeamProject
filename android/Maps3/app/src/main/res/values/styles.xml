<resources>

    <style name="Widget.Theme.Maps1.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="CustomCircleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Круглая форма -->
    </style>
    <style name="SearchResultCard.TextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="RatingTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>