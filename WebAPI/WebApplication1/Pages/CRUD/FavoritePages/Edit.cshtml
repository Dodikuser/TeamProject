@page
@model AdminPanel.Pages.CRUD.FavoritePages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Favorite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Favorite.Id" />
            <div class="form-group">
                <label asp-for="Favorite.FavoritedAt" class="control-label"></label>
                <input asp-for="Favorite.FavoritedAt" class="form-control" />
                <span asp-validation-for="Favorite.FavoritedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.UserId" class="control-label"></label>
                <select asp-for="Favorite.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Favorite.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.PlaceId" class="control-label"></label>
                <select asp-for="Favorite.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
                <span asp-validation-for="Favorite.PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
