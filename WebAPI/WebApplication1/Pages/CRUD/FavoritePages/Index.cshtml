@page
@model AdminPanel.Pages.CRUD.FavoritePages.IndexModel

@{
    ViewData["Title"] = "Favorite";
}

<h1>Favorite</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Favorite[0].FavoritedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favorite[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favorite[0].Place)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Favorite) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FavoritedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
