@page
@model AdminPanel.Pages.CRUD.HistoryPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="History.Id" />
            <div class="form-group">
                <label asp-for="History.VisitDateTime" class="control-label"></label>
                <input asp-for="History.VisitDateTime" class="form-control" />
                <span asp-validation-for="History.VisitDateTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="History.IsFromRecs" /> @Html.DisplayNameFor(model => model.History.IsFromRecs)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="History.UserId" class="control-label"></label>
                <select asp-for="History.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="History.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="History.PlaceId" class="control-label"></label>
                <select asp-for="History.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
                <span asp-validation-for="History.PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
