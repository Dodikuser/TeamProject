@model AdminPanel.Pages.CRUD.ReviewPages.IndexModel

@{
    ViewData["Title"] = "Review";
}

<h1>Review</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Quality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Congestion)
            </th>
