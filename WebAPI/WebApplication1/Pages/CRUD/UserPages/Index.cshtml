@model AdminPanel.Pages.CRUD.UserPages.IndexModel

@{
    ViewData["Title"] = "User";
}

<h1>User</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].GoogleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].FacebookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].OauthProvider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].SearchHistoryOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].VisitHistoryOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].TokensAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].IsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoogleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacebookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OauthProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SearchHistoryOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitHistoryOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TokensAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
